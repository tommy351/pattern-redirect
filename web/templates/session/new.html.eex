<h2>Log in</h2>

<%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
  <div class="form-group">
    <label id="session-email">Email</label> 
    <%= email_input f, :email, id: "session-email", class: "form-control" %>
  </div>

  <div class="form-group">
    <label id="session-password">Password</label> 
    <%= password_input f, :password, id: "session-password", class: "form-control" %>
  </div>

  <%= submit "Submit", class: "btn btn-primary" %>
<% end %>
